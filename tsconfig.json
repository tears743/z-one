{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*", "test/**/*"],
  "ts-node": {
    "transpileOnly": true
  },
 
}
